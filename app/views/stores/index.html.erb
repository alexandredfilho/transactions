<div class="row">
  <div class="col-md-12 blog-main">
    <div class="blog-post">
      <h2 class="blog-post-title"><%= I18n.t("views.stores.title") %></h2>
      <%= link_to I18n.t("views.transactions.buttons.import_new_transaction"), new_cnab_transaction_path, class: "btn btn-primary" %>
      <br/><br/>
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th><%= I18n.t("views.stores.table.store_name") %></th>
            <th><%= I18n.t("views.stores.table.store_admin") %></th>
            <th><%= I18n.t("views.stores.table.balance") %></th>
          </tr>
        </thead>
        <tbody>
          <% @stores.each do |store| %>
            <tr>
              <td><%= store.name %></td>
              <td><%= store.store_admin %></td>
              <td><%= number_to_currency store.balance %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>